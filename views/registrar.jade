extends ./layouts/main.jade
block contenido
  div(class="modal fade" tabindex="-1" role="dialog" id="loginModal")
    div(class="modal-dialog modal-lg")
      div(class="modal-content")
        div(class="modal-header")
          button(type="button" class="close" data-dismiss="modal" aria-label="Cerrar")
            span(aria-hidden='true') &times;
          h2(class="modal-title") Login Encrypted
          h4(class="modal-title") Seguridad en Redes y Tecnología Móvil

        div(class="modal-body")
          div(class="container")
            form(id="registrar", method="POST", action="/registrar")
              div(class="row")
                div(class="col-md-2")
                  label(for="email") Correo Electronico:
                div(class="col-md-7")
                  input(class="form-control", type="text", name="email", id="email")
              br
              div(class="row")
                div(class="col-md-2")
                  label(for="pass") Password:
                div(class="col-md-7")
                  input(class="form-control", type="password", name="password" id="password")
              br
              div(class="row")
                div(class="col-md-2")
                  label(for="pass") Confirmar Password:
                div(class="col-md-7")
                  input(class="form-control", type="password", name="confirmarPassword" id="confirmarPassword")
              br
              div(class="row")
                div(class="col-md-2")
                  label(for="pass") Nombre:
                div(class="col-md-7")
                  input(class="form-control", type="text", name="nombre" id="nombre")
              br
              div(class="row")
                div(class="col-md-2")
                  label(for="pass") Apellido Paterno:
                div(class="col-md-7")
                  input(class="form-control", type="text", name="paterno" id="paterno")
              br
              div(class="row")
                div(class="col-md-2")
                  label(for="pass") Apellido Materno:
                div(class="col-md-7")
                  input(class="form-control", type="text", name="materno" id="materno")
              br
              div(class="row")
                input(type="submit", value="Guardar", class="btn btn-primary")
        div(class="modal-footer")
          a(href="/")  Regresar
